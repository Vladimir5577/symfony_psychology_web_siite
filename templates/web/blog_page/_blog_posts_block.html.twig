{% if blog_posts and blog_posts.posts|length > 0 %}
<div class="container px-4 py-5">
    <div class="row g-4">
        {% for post in blog_posts.posts %}
        <div class="col-md-6 col-lg-4">
            <article class="card h-100 border-0 shadow-sm overflow-hidden">
                {% if post.image %}
                <img
                    class="card-img-top"
                    src="{{ ('uploads/images/' ~ post.image) | imagine_filter('medium') }}"
                    alt="{{ post.title }}"
                    width="400"
                    height="220"
                    loading="lazy"
                    style="object-fit: cover; height: 220px;"
                >
                {% else %}
                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 220px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M4.5 5.5A.5.5 0 0 1 5 5h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5z"/>
                    </svg>
                </div>
                {% endif %}
                <div class="card-body">
                    <h2 class="card-title h5 text-body-emphasis">{{ post.title }}</h2>
                    <p class="card-text text-body-secondary small">{{ post.description|default('') }}</p>
                </div>
            </article>
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}
