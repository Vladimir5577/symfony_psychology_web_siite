{% if contact_reassurance_block and contact_reassurance_block.posts|length > 0 %}
{% set post = contact_reassurance_block.posts|first %}
<div class="container marketing">
    <div class="row featurette">
        <div class="col-md-7">
            <h2 class="featurette-heading fw-normal lh-1">{{ post.title }}</h2>
            <p class="lead">{{ post.description|default('') }}</p>
        </div>
        <div class="col-md-5">
            <svg
                aria-label="Placeholder"
                class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto rounded"
                height="300"
                preserveAspectRatio="xMidYMid slice"
                role="img"
                width="300"
                xmlns="http://www.w3.org/2000/svg"
            >
                <title>Confidential</title>
                <rect width="100%" height="100%" fill="var(--bs-secondary-bg)"></rect>
                <text x="50%" y="50%" fill="var(--bs-secondary-color)" dy=".3em">500x500</text>
            </svg>
        </div>
    </div>
</div>
{% endif %}
