{# Contact info — Phone, Email + social (data from Contact entity by slug) #}
{% if contact_info_block is defined and contact_info_block %}
{% set contacts = contacts|default({}) %}
{% set contact_phone = contacts['phone'] is defined ? contacts['phone'] : null %}
{% set contact_email = contacts['email'] is defined ? contacts['email'] : null %}
<div class="container marketing">
    <h2 class="pb-2 border-bottom text-center mb-4">Ways to Reach Me</h2>
    <div class="row g-4 py-4">
        {% if contact_phone and contact_phone.contactValue %}
        <div class="col-lg-6 text-center">
            <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient rounded-circle fs-4 mb-3" style="width: 3rem; height: 3rem;">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58z"/>
                </svg>
            </div>
            <h3 class="fs-5 text-body-emphasis">{{ contact_phone.name }}</h3>
            <p class="text-body-secondary mb-0">
                <a href="tel:{{ contact_phone.contactValue|replace({' ': '', '(': '', ')': '', '-': ''}) }}" class="text-decoration-none">{{ contact_phone.contactValue }}</a>
            </p>
            {% if contact_phone.description %}
            <small class="text-body-tertiary">{{ contact_phone.description|split("\n")|first }}</small>
            {% endif %}
        </div>
        {% endif %}
        {% if contact_email and contact_email.contactValue %}
        <div class="col-lg-6 text-center">
            <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient rounded-circle fs-4 mb-3" style="width: 3rem; height: 3rem;">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
                </svg>
            </div>
            <h3 class="fs-5 text-body-emphasis">{{ contact_email.name }}</h3>
            <p class="text-body-secondary mb-0">
                <a href="mailto:{{ contact_email.contactValue }}" class="text-decoration-none">{{ contact_email.contactValue }}</a>
            </p>
            {% if contact_email.description %}
            <small class="text-body-tertiary">{{ contact_email.description|split("\n")|first }}</small>
            {% endif %}
        </div>
        {% endif %}
    </div>
    {# Social media row — только если есть контакты с slug facebook, instagram, telegram, whatsapp #}
    {% if (contacts['facebook'] is defined and contacts['facebook'].contactValue) or (contacts['instagram'] is defined and contacts['instagram'].contactValue) or (contacts['telegram'] is defined and contacts['telegram'].contactValue) or (contacts['whatsapp'] is defined and contacts['whatsapp'].contactValue) %}
    <div class="row g-4 py-2 justify-content-center">
        {% if contacts['facebook'] is defined and contacts['facebook'].contactValue %}
        <div class="col-auto text-center">
            <a href="{{ contacts['facebook'].contactValue }}" target="_blank" rel="noopener noreferrer" class="text-decoration-none" aria-label="Facebook">
                <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient rounded-circle p-3" style="width: 3.5rem; height: 3.5rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                </div>
                <span class="d-block mt-2 small text-body-secondary">Facebook</span>
            </a>
        </div>
        {% endif %}
        {% if contacts['instagram'] is defined and contacts['instagram'].contactValue %}
        <div class="col-auto text-center">
            <a href="{{ contacts['instagram'].contactValue }}" target="_blank" rel="noopener noreferrer" class="text-decoration-none" aria-label="Instagram">
                <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient rounded-circle p-3" style="width: 3.5rem; height: 3.5rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                </div>
                <span class="d-block mt-2 small text-body-secondary">Instagram</span>
            </a>
        </div>
        {% endif %}
        {% if contacts['telegram'] is defined and contacts['telegram'].contactValue %}
        <div class="col-auto text-center">
            <a href="{{ contacts['telegram'].contactValue }}" target="_blank" rel="noopener noreferrer" class="text-decoration-none" aria-label="Telegram">
                <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient rounded-circle p-3" style="width: 3.5rem; height: 3.5rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/></svg>
                </div>
                <span class="d-block mt-2 small text-body-secondary">Telegram</span>
            </a>
        </div>
        {% endif %}
        {% if contacts['whatsapp'] is defined and contacts['whatsapp'].contactValue %}
        <div class="col-auto text-center">
            <a href="{{ contacts['whatsapp'].contactValue }}" target="_blank" rel="noopener noreferrer" class="text-decoration-none" aria-label="WhatsApp">
                <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient rounded-circle p-3" style="width: 3.5rem; height: 3.5rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
                </div>
                <span class="d-block mt-2 small text-body-secondary">WhatsApp</span>
            </a>
        </div>
        {% endif %}
    </div>
    {% endif %}
</div>
<hr class="featurette-divider" />
{% endif %}
