{# About page — ценности / подход (колонки) #}
{% if about_values and about_values.posts|length > 0 %}
    <div class="container px-4 py-5" id="about-values">
        <h2 class="pb-2 border-bottom text-center text-body-emphasis">Ценности и подход</h2>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
            {% for post in about_values.posts %}
                <div class="feature col">
                    <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient rounded-circle fs-2 mb-3" style="width: 3rem; height: 3rem;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                        </svg>
                    </div>
                    <h3 class="fs-5 text-body-emphasis">{{ post.title }}</h3>
                    <p class="text-body-secondary mb-0">
                        {{ post.description|default('') }}
                    </p>
                </div>
            {% endfor %}
        </div>
    </div>
    <hr class="featurette-divider" />
{% endif %}
