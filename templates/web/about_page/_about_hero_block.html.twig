{# About page hero — заголовок и вступление #}
{% if about_hero and about_hero.posts|length > 0 %}
    {% set first = about_hero.posts|first %}
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold text-body-emphasis">{{ first.title }}</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">
                {{ first.description|default('') }}
            </p>
        </div>
    </div>
{% endif %}
