{% if services_themes and services_themes.posts|length > 0 %}
<div class="container px-4 py-5">
    <h2 class="pb-2 border-bottom text-body-emphasis mb-4">С какими запросами можно обратиться</h2>
    <div class="row g-4">
        {% for post in services_themes.posts %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm overflow-hidden">
                {% if post.image %}
                <img
                    class="card-img-top"
                    src="{{ ('uploads/images/' ~ post.image) | imagine_filter('medium') }}"
                    alt="{{ post.title }}"
                    width="400"
                    height="180"
                    loading="lazy"
                    style="object-fit: cover; height: 180px;"
                >
                {% else %}
                <div class="card-img-top bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center text-body-secondary" style="height: 180px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16"><path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/></svg>
                </div>
                {% endif %}
                <div class="card-body">
                    <h3 class="card-title h6 text-body-emphasis">{{ post.title }}</h3>
                    <p class="card-text text-body-secondary small mb-0">{{ post.description|default('') }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
<hr class="featurette-divider" />
{% endif %}
