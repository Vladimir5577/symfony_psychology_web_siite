{% if marketing_block_featurette and marketing_block_featurette.posts|length > 0 %}
<!-- Marketing featurettes
 ================================================== -->
<div class="container marketing">
    <!-- START THE FEATURETTES -->
    <hr class="featurette-divider" />
    {% for post in marketing_block_featurette.posts %}
    <div class="row featurette">
        <div class="col-md-7{{ loop.index0 is odd ? ' order-md-2' : '' }}">
            <h2 class="featurette-heading fw-normal lh-1">
                {{ post.title }}
            </h2>
            <p class="lead">
                {{ post.description|default('') }}
            </p>
        </div>
        <div class="col-md-5{{ loop.index0 is odd ? ' order-md-1' : '' }}">
            {% if post.image %}
            <img
                class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto"
                src="{{ ('uploads/images/' ~ post.image) | imagine_filter('large') }}"
                alt="{{ post.title }}"
                width="500"
                height="500"
                loading="lazy"
                style="object-fit: cover;"
            >
            {% else %}
            <svg
                aria-label="Placeholder: 500x500"
                class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto"
                height="500"
                preserveAspectRatio="xMidYMid slice"
                role="img"
                width="500"
                xmlns="http://www.w3.org/2000/svg"
            >
                <title>Placeholder</title>
                <rect
                    width="100%"
                    height="100%"
                    fill="var(--bs-secondary-bg)"
                ></rect>
                <text x="50%" y="50%" fill="var(--bs-secondary-color)" dy=".3em">
                    500x500
                </text>
            </svg>
            {% endif %}
        </div>
    </div>
    <hr class="featurette-divider" />
    {% endfor %}
    <!-- /END THE FEATURETTES -->
</div>
<!-- /.container -->
{% endif %}
