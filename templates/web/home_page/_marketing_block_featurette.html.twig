{% if marketing_block_featurette and marketing_block_featurette.posts|length > 0 %}
<!-- Marketing featurettes
 ================================================== -->
<div class="container marketing">
    <!-- START THE FEATURETTES -->
    <hr class="featurette-divider" />
    {% for post in marketing_block_featurette.posts %}
    <div class="row featurette">
        <div class="col-md-7{{ loop.index0 is odd ? ' order-md-2' : '' }}">
            <h2 class="featurette-heading fw-normal lh-1">
                {{ post.title }}
            </h2>
            <p class="lead">
                {{ post.description|default('') }}
            </p>
        </div>
        <div class="col-md-5{{ loop.index0 is odd ? ' order-md-1' : '' }}">
            <div class="ratio ratio-1x1 featurette-image-wrap">
                {% if post.image %}
                <img
                    class="featurette-image w-100 h-100 object-fit-cover"
                    src="{{ ('uploads/images/' ~ post.image) | imagine_filter('large') }}"
                    alt="{{ post.title }}"
                    loading="lazy"
                >
                {% else %}
                <div class="d-flex align-items-center justify-content-center bg-secondary bg-opacity-25 text-secondary">
                    <span class="opacity-50">500Ã—500</span>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    <hr class="featurette-divider" />
    {% endfor %}
    <!-- /END THE FEATURETTES -->
</div>
<!-- /.container -->
{% endif %}
