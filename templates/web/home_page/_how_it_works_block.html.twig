{% if home_how_it_works and home_how_it_works.posts|length > 0 %}
<div class="container px-4 py-5">
    <h2 class="pb-2 border-bottom text-center text-body-emphasis mb-5">Как это работает</h2>
    <div class="row g-4">
        {% for post in home_how_it_works.posts %}
        <div class="col-md-6 col-lg-3">
            <div class="d-flex">
                <span class="flex-shrink-0 rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center fw-bold me-3" style="width: 2.5rem; height: 2.5rem;">{{ loop.index }}</span>
                <div>
                    <h3 class="h6 text-body-emphasis mb-1">{{ post.title }}</h3>
                    <p class="small text-body-secondary mb-0">{{ post.description|default('') }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
<hr class="featurette-divider" />
{% endif %}
