{# Hero carousel — блоки из hero_block.posts #}
{% if hero_block and hero_block.posts|length > 0 %}
<div class="container pt-4">
    <div id="heroCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
        <div class="carousel-indicators">
            {% for post in hero_block.posts %}
            <button
                type="button"
                data-bs-target="#heroCarousel"
                data-bs-slide-to="{{ loop.index0 }}"
                class="{% if loop.first %}active{% endif %}"
                {% if loop.first %}aria-current="true"{% endif %}
                aria-label="Slide {{ loop.index }}"
            ></button>
            {% endfor %}
        </div>
        <div class="carousel-inner">
            {% for post in hero_block.posts %}
            <div class="carousel-item{{ loop.first ? ' active' : '' }}">
                {% if post.image %}
                <img src="{{ ('uploads/images/' ~ post.image) | imagine_filter('large') }}" alt="{{ post.title }}" class="bd-placeholder-img" width="100%" height="100%" loading="lazy" style="object-fit: cover;">
                {% else %}
                <div class="bd-placeholder-img bg-secondary" style="width:100%;height:400px;"></div>
                {% endif %}
                <div class="container">
                    <div class="carousel-caption {{ loop.index0 % 3 == 0 ? 'text-start' : (loop.index0 % 3 == 1 ? '' : 'text-end') }}">
                        <h1>{{ post.title }}</h1>
                        <p class="{{ loop.index0 == 0 ? 'opacity-75' : '' }}">
                            {{ post.description|default('') }}
                        </p>
                        <p>
                            <a class="btn btn-lg btn-primary" href="#">Подробнее</a>
                        </p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
{% endif %}



