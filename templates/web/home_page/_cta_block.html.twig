{% if home_cta and home_cta.posts|length > 0 %}
{% set first = home_cta.posts|first %}
<div class="container px-4 py-5 my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h2 class="display-6 fw-bold text-body-emphasis mb-3">{{ first.title }}</h2>
            <p class="lead text-body-secondary mb-4">{{ first.description|default('') }}</p>
            <a class="btn btn-primary btn-lg px-4" href="{{ path('app_contacts') }}">Записаться на встречу</a>
        </div>
    </div>
</div>
<hr class="featurette-divider" />
{% endif %}
