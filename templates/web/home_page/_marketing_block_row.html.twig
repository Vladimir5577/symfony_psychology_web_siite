{% if marketing_block_row and marketing_block_row.posts|length > 0 %}
<div class="container px-4 py-5">
    <div class="row g-4">
        {% for post in marketing_block_row.posts %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm overflow-hidden">
                {% if post.image %}
                <img
                    class="card-img-top"
                    src="{{ ('uploads/images/' ~ post.image) | imagine_filter('medium') }}"
                    alt="{{ post.title }}"
                    width="400"
                    height="220"
                    loading="lazy"
                    style="object-fit: cover; height: 220px;"
                >
                {% else %}
                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 220px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16"><path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/><path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/></svg>
                </div>
                {% endif %}
                <div class="card-body">
                    <h3 class="card-title h5 text-body-emphasis">{{ post.title }}</h3>
                    <p class="card-text text-body-secondary small mb-0">{{ post.description|default('') }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
<hr class="featurette-divider" />
{% endif %}
