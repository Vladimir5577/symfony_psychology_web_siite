{% if marketing_block_row and marketing_block_row.posts|length > 0 %}
<!-- Marketing row
================================================== -->
<div class="container marketing">
    <!-- Three columns of text below the carousel -->
    <div class="row">
        {% for post in marketing_block_row.posts %}
        <div class="col-lg-4">
            {% if post.image %}
            <img
                class="bd-placeholder-img rounded-circle"
                src="{{ ('uploads/images/' ~ post.image) | imagine_filter('medium') }}"
                alt="{{ post.title }}"
                width="140"
                height="140"
                loading="lazy"
                style="object-fit: cover;"
            >
            {% else %}
            <svg
                aria-label="Placeholder"
                class="bd-placeholder-img rounded-circle"
                height="140"
                preserveAspectRatio="xMidYMid slice"
                role="img"
                width="140"
                xmlns="http://www.w3.org/2000/svg"
            >
                <title>Placeholder</title>
                <rect
                    width="100%"
                    height="100%"
                    fill="var(--bs-secondary-color)"
                ></rect>
            </svg>
            {% endif %}
            <h2 class="fw-normal">{{ post.title }}</h2>
            <p>
                {{ post.description|default('') }}
            </p>
            <p>
                <a class="btn btn-secondary" href="#">View details &raquo;</a>
            </p>
        </div>
        <!-- /.col-lg-4 -->
        {% endfor %}
    </div>
    <!-- /.row -->
</div>
{% endif %}
